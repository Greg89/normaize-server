# Database Configuration
MYSQLHOST=localhost
MYSQLDATABASE=normaize
MYSQLUSER=root
MYSQLPASSWORD=password
MYSQLPORT=3306

# Auth0 Configuration
AUTH0_ISSUER=https://your-domain.auth0.com/
AUTH0_AUDIENCE=https://your-api.com

# Swagger Auth0 Configuration (for testing in development)
SWAGGER_AUTH0_CLIENT_ID=your-swagger-client-id
SWAGGER_AUTH0_CLIENT_SECRET=your-swagger-client-secret

# Storage Configuration
# Available options: memory (default), s3
STORAGE_PROVIDER=memory

# For S3/MinIO storage, use: STORAGE_PROVIDER=s3
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=normaize-uploads
# For MinIO on Railway, set AWS_SERVICE_URL to your MinIO endpoint
AWS_SERVICE_URL=https://your-minio-endpoint.com
# Note: Files will be organized in folders by environment:
# - production/ -> production folder
# - beta/ -> beta folder  
# - development/ -> development folder

# Logging Configuration
SEQ_URL=https://your-seq-server.com
SEQ_API_KEY=your-seq-api-key

# Application Configuration
ASPNETCORE_ENVIRONMENT=Development
PORT=5000

# Railway HTTPS Configuration (optional)
# Set this if you want HTTPS redirection in Railway
# HTTPS_PORT=443 